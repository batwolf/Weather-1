<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="22dp">

    <TextView
        android:id="@+id/one_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/one_clock"
        android:clickable="false"
        android:scaleType="fitXY"
        android:text=""/>

    <TextView
        android:id="@+id/one_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/one_cloud"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/icon_humidity"/>

    <TextView
        android:id="@+id/one_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/one_temp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/icon_temp"/>

    <TextView
        android:id="@+id/one_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/icon_temp"/>


</RelativeLayout>